{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "PS5 Upload",
  "version": "1.2.0",
  "identifier": "com.phantomptr.ps5upload",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "icon": ["icons/icon.ico", "icons/icon.png"]
  },
  "app": {
    "windows": [
      {
        "title": "PS5 Upload",
        "width": 1440,
        "height": 960,
        "minWidth": 1200,
        "minHeight": 840,
        "decorations": false,
        "shadow": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "dialog": null
  }
}
